<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="top"
    android:foregroundGravity="top"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_marginBottom="5sp"
        android:id="@+id/cardView"
        app:cardCornerRadius="2dp"

        app:cardElevation="5sp"
        android:outlineSpotShadowColor="@color/redmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="5sp"
                app:cardCornerRadius="90sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/profilepicture">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.80">

                <TextView
                    android:id="@+id/uid"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Abhishek kumar tiwari"
                    android:textColor="@color/theme"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@color/redmain"
                    android:backgroundTint="@color/red"
                    >

                </View>
                <LinearLayout
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_marginLeft="0sp"
                        android:layout_marginRight="30sp"
                        android:layout_marginBottom="10sp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100sp"
                            android:text="Followers"
                            android:textColor="@color/whatsappgreen"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/followers"
                            android:layout_width="match_parent"
                            android:text="Followers"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_marginLeft="15sp"
                        android:layout_marginRight="15sp"
                        android:layout_marginBottom="10sp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="100sp"
                            android:text="Followings"

                            android:textColor="@color/redmain"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/afollowings"
                            android:layout_width="match_parent"
                            android:text="Followers"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            >

                        </TextView>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="9sp"
        android:background="@color/theme"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>