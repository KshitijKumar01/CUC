<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sign_up">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@mipmap/pagebg"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="1"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:cardElevation="0dp"
                android:layout_marginRight="0sp"
                android:layout_marginBottom="0sp"
                android:backgroundTint="#C8001D2C"
                app:cardCornerRadius="0sp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15sp"
                    android:layout_marginRight="0sp"

                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/next"
                        android:layout_width="60sp"

                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintHorizontal_bias=".87"
                        android:layout_height="60sp"

                        android:layout_gravity="right"
                        android:backgroundTint="@color/redmain"
                        android:foregroundGravity="right"

                        app:cardCornerRadius="90sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_margin="2sp"
                            android:layout_width="match_parent"
                            android:src="@mipmap/nextbtn"
                            android:layout_height="match_parent">

                        </ImageView>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ScrollView
                    android:layout_marginBottom="85sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.cardview.widget.CardView
                            android:layout_width="150sp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            app:cardCornerRadius="10sp"
                            android:backgroundTint="@color/yellow"

                            android:layout_marginTop="30sp"
                            app:cardElevation="0dp"
                            android:layout_height="150sp">
                            <ImageView
                                android:layout_margin="4sp"
                                android:layout_width="match_parent"
                                android:src="@mipmap/two"
                                android:layout_height="match_parent">

                            </ImageView>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5sp"
                            android:layout_marginRight="12sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50sp"
                            android:layout_height="40sp"
                            android:foregroundGravity="center"
                            android:layout_gravity="center"

                            android:backgroundTint="@color/white"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:textColor="@color/redmain"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:text="+91"
                                    android:textSize="25sp"
                                    android:gravity="center"
                                    android:foregroundGravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </TextView>

                                <EditText

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/white"
                                    android:inputType="phone"
                                    android:hint="Enter your Whatsapp no."
                                    android:paddingLeft="10sp"
                                    app:flow_horizontalAlign="center"
                                    android:textColorHint="@color/theme"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageView4"

                                    app:layout_constraintStart_toEndOf="@+id/textView2"
                                    app:layout_constraintTop_toTopOf="parent">

                                </EditText>

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@mipmap/uid"
                                    android:layout_marginRight="10sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:layout_marginRight="0sp"
                            android:layout_marginTop="30sp"

                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"

                                android:layout_height="match_parent"
                                app:layout_constraintWidth_percent="0.8"

                                android:layout_gravity="center"
                                android:backgroundTint="@color/redmain"
                                android:foregroundGravity="center"

                                app:cardCornerRadius="20sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:text="VERIFY NUMBER"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:gravity="center"

                                    android:layout_height="match_parent">

                                </TextView>

                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="5sp"
                            android:layout_marginRight="12sp"
                            android:layout_marginTop="60sp"
                            android:layout_height="40sp"
                            android:foregroundGravity="center"
                            android:layout_gravity="center"

                            android:backgroundTint="@color/white"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:paddingLeft="10sp"
                                android:layout_height="match_parent"
                               >

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginRight="2sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_editor_absoluteX="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Enter OTP"
                                        android:textSize="22sp"

                                        android:layout_gravity="center"

                                        android:textStyle="bold"
                                        android:textColor="@color/redmain"
                                        android:gravity="center"
                                        android:layout_height="match_parent">

                                    </TextView>
                                    <Space
                                        android:layout_width="10sp"
                                        android:layout_height="match_parent">

                                    </Space>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:gravity="end"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        >
                                        <androidx.cardview.widget.CardView

                                            android:layout_width="36sp"
                                            android:layout_margin="2dp"

                                            android:backgroundTint="@color/black"
                                            app:cardCornerRadius="5sp"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:layout_margin="1sp"
                                                app:cardCornerRadius="5sp"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">

                                                <EditText
                                                    android:inputType="number"
                                                    android:id="@+id/otp1"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_gravity="center"
                                                    android:background="@color/transparent"
                                                    android:backgroundTint="@color/transparent"
                                                    android:elevation="0dp"
                                                    android:gravity="center"
                                                    android:textSize="30sp">

                                                </EditText>

                                            </androidx.cardview.widget.CardView>

                                        </androidx.cardview.widget.CardView>
                                        <androidx.cardview.widget.CardView

                                            android:layout_width="36sp"
                                            android:layout_margin="2dp"

                                            android:backgroundTint="@color/black"
                                            app:cardCornerRadius="5sp"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:layout_margin="1sp"
                                                app:cardCornerRadius="5sp"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <EditText
                                                    android:inputType="number"
                                                    android:id="@+id/otp2"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="30sp"
                                                    android:layout_width="match_parent"
                                                    android:backgroundTint="@color/transparent"
                                                    android:background="@color/transparent"
                                                    android:elevation="0dp"
                                                    android:layout_height="match_parent">

                                                </EditText>

                                            </androidx.cardview.widget.CardView>

                                        </androidx.cardview.widget.CardView>
                                        <androidx.cardview.widget.CardView

                                            android:layout_width="36sp"
                                            android:layout_margin="2dp"

                                            android:backgroundTint="@color/black"
                                            app:cardCornerRadius="5sp"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:layout_margin="1sp"
                                                app:cardCornerRadius="5sp"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <EditText
                                                    android:id="@+id/otp3"
                                                    android:inputType="number"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="30sp"
                                                    android:layout_width="match_parent"
                                                    android:backgroundTint="@color/transparent"
                                                    android:background="@color/transparent"
                                                    android:elevation="0dp"
                                                    android:layout_height="match_parent">

                                                </EditText>

                                            </androidx.cardview.widget.CardView>

                                        </androidx.cardview.widget.CardView>
                                        <androidx.cardview.widget.CardView

                                            android:layout_width="36sp"
                                            android:layout_margin="2dp"

                                            android:backgroundTint="@color/black"
                                            app:cardCornerRadius="5sp"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:layout_margin="1sp"
                                                app:cardCornerRadius="5sp"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent">
                                                <EditText
                                                    android:inputType="number"
                                                    android:id="@+id/otp4"
                                                    android:layout_gravity="center"
                                                    android:gravity="center"
                                                    android:textSize="30sp"
                                                    android:layout_width="match_parent"
                                                    android:backgroundTint="@color/transparent"
                                                    android:background="@color/transparent"
                                                    android:elevation="0dp"
                                                    android:layout_height="match_parent">

                                                </EditText>

                                            </androidx.cardview.widget.CardView>

                                        </androidx.cardview.widget.CardView>

                                    </LinearLayout>

                                </LinearLayout>






                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/yellow"
                            android:text="Please Enter the correct UID a verification email will be sent to you on that E-mail -ID which is asociated with your UID"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="10sp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="90sp"

                            android:layout_height="wrap_content">

                        </TextView>




                    </LinearLayout>
                </ScrollView>



            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>