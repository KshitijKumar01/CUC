<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="0sp"
    android:layout_marginTop="0sp"
    android:layout_marginRight="0sp"
    android:layout_marginBottom="0sp"
    android:visibility="visible"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@color/redmain"
            android:backgroundTint="@color/redmain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:text="Search according to requirements"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="From :"
                android:textStyle="bold"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                >
            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:elevation="10sp"
                android:backgroundTint="@color/yellow"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                app:cardCornerRadius="4sp"
                android:layout_height="35sp">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="4sp"
                    android:layout_margin="1sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_marginLeft="5sp"

                        android:id="@+id/states_spinner_from"
                        android:tooltipText="@string/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:elevation="10sp"
                app:cardCornerRadius="4sp"
                android:backgroundTint="@color/yellow"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                android:layout_height="35sp">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="4sp"
                    android:layout_margin="1sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_marginLeft="5sp"

                        android:id="@+id/city_spinner_from"
                        android:tooltipText="@string/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textStyle="bold"
                android:text="To :"
                android:layout_marginLeft="10sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                >
            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/redmain"
                android:elevation="10sp"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                app:cardCornerRadius="4sp"
                android:layout_height="35sp">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="4sp"
                    android:layout_margin="1sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_marginLeft="5sp"
                        android:id="@+id/state_spinner_to"
                        android:tooltipText="@string/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>

                </androidx.cardview.widget.CardView>
X            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="5sp"
                android:elevation="10sp"
                android:backgroundTint="@color/redmain"
                app:cardCornerRadius="4sp"
                android:layout_marginBottom="5sp"
                android:layout_width="match_parent"
                android:layout_height="35sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="4sp"
                    android:layout_margin="1sp"
                    android:layout_height="match_parent">
                    <Spinner
                        android:layout_marginLeft="5sp"

                        android:id="@+id/city_spinner_to"
                        android:tooltipText="@string/app_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </Spinner>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/errortext"
                android:layout_margin="10sp"
                android:textAlignment="center"
                android:textColor="#FF0031"
                android:layout_height="wrap_content">

            </TextView>




        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/theme"
            android:foregroundGravity="center"
            app:cardCornerRadius="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintWidth_percent="01">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                app:cardCornerRadius="5sp">
                <ImageView
                    android:layout_marginLeft="5sp"
                    android:layout_width="30sp"
                    android:src="@mipmap/calendar"
                    android:layout_height="match_parent"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/date_picker2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30sp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="Date"
                    android:padding="0dp"
                    android:paddingLeft="10sp"

                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColorHint="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"


                    tools:ignore="RtlCompat">

                </TextView>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:textColor="@color/white"
            android:backgroundTint="#040C5E"
            android:gravity="center"
            android:minWidth="0dp"
            android:paddingLeft="30sp"

            android:paddingRight="30sp"
            android:text="SEARCH" />

    </LinearLayout>



</androidx.cardview.widget.CardView>