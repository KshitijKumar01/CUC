<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Sign_up">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@mipmap/pagebg"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="1"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:cardElevation="0dp"
                android:layout_marginRight="0sp"
                android:layout_marginBottom="0sp"
                android:backgroundTint="#C8001D2C"
                app:cardCornerRadius="0sp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="150sp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            app:cardCornerRadius="10sp"
                            android:backgroundTint="@color/yellow"

                            android:layout_marginTop="30sp"
                            app:cardElevation="0dp"
                            android:layout_height="150sp">
                            <ImageView
                                android:layout_margin="4sp"
                                android:layout_width="match_parent"
                                android:src="@mipmap/four"
                                android:layout_height="match_parent">

                            </ImageView>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="0sp"
                            android:layout_marginRight="12sp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="50sp"
                            android:layout_height="40sp"
                            android:foregroundGravity="center"
                            android:layout_gravity="center"

                            android:backgroundTint="@color/white"
                            >
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:hint="Enter your UID"
                                    android:paddingLeft="10sp"
                                    android:textColorHint="@color/theme"
                                    android:backgroundTint="@color/white"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </EditText>

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@mipmap/uid"
                                    android:layout_marginRight="10sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            app:cardCornerRadius="0sp"
                            android:layout_marginRight="12sp"
                            android:layout_marginTop="20sp"
                            android:layout_height="40sp"
                            android:foregroundGravity="center"
                            android:layout_gravity="center"

                            android:backgroundTint="@color/white"
                            >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:backgroundTint="@color/white"
                                    android:hint="Enter password"
                                    android:paddingLeft="10sp"
                                    android:textColorHint="@color/theme"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </EditText>

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginRight="10sp"
                                    android:src="@mipmap/eyeclosed"
                                    app:layout_constraintBottom_toBottomOf="parent"

                                    app:layout_constraintEnd_toStartOf="@+id/imageView5"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginRight="10sp"
                                    android:src="@mipmap/password"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20sp"

                            android:layout_marginRight="12sp"
                            android:backgroundTint="@color/white"
                            android:foregroundGravity="center"

                            app:cardCornerRadius="0sp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10sp"
                                    android:backgroundTint="@color/white"
                                    android:hint="Enter password again"
                                    android:paddingLeft="10sp"
                                    android:textColorHint="@color/theme"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/imageView7"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </EditText>

                                <ImageView
                                    android:id="@+id/imageView7"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginRight="10sp"
                                    android:src="@mipmap/eyeclosed"
                                    app:layout_constraintBottom_toBottomOf="parent"

                                    app:layout_constraintEnd_toStartOf="@+id/imageView8"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_marginRight="10sp"
                                    android:src="@mipmap/password_again"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </ImageView>

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/yellow"
                            android:text="Please Enter the correct UID a verification email will be sent to you on that E-mail -ID which is asociated with your UID"
                            android:layout_marginLeft="15sp"
                            android:layout_marginRight="10sp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="30sp"

                            android:layout_height="wrap_content">

                        </TextView>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginRight="0sp"
                            android:layout_marginTop="50sp"

                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/next"
                                android:layout_width="60sp"

                                app:layout_constraintVertical_bias="1"
                                app:layout_constraintHorizontal_bias=".87"
                                android:layout_height="60sp"

                                android:layout_gravity="right"
                                android:backgroundTint="@color/redmain"
                                android:foregroundGravity="right"

                                app:cardCornerRadius="90sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <ImageView
                                    android:layout_margin="2sp"
                                    android:layout_width="match_parent"
                                    android:src="@mipmap/nextbtn"
                                    android:layout_height="match_parent">

                                </ImageView>

                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>
                </ScrollView>



            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>