<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profileview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/transparent"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="10sp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    android:foregroundGravity="right"
                    android:visibility="invisible"
                    app:cardCornerRadius="2sp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        app:cardCornerRadius="2sp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="17dp"
                            android:layout_margin="3sp"
                            android:src="@mipmap/pen">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item_profile_picture_card_parent"
                    android:layout_width="80dp"
                    android:layout_height="80dp"


                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="20sp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="40dp"

                    app:cardElevation="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1sp"
                        app:cardCornerRadius="40dp">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/item_profile_picture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10sp"
                                android:scaleType="centerInside"

                                android:src="@mipmap/profile" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/uid"
                    android:layout_centerHorizontal="false"
                    android:layout_marginStart="120dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="17sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_below="@+id/info"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="40sp"

                    android:layout_marginEnd="10sp"
                    android:background="#000000"
                    android:backgroundTint="@color/yellow">

                </View>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="10sp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="3sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/version_card"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="3sp">

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Account Activated"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <ScrollView

            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileview">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="2sp"
                android:backgroundTint="#B5001D2C"
                app:cardCornerRadius="2sp"
                app:cardElevation="3sp">

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2sp"
                    android:backgroundTint="@color/cardview_light_background"
                    app:cardCornerRadius="2sp"
                    app:cardElevation="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"

                            android:layout_marginTop="30sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/add_whatsapp_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2sp"

                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="ADD WHATSAPP NO"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/update_password"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2sp"

                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="UPDATE PASSWORD"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/update_phone_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2sp"

                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="UPDATE PHONE NO"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/delete_account"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2sp"
                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="DELETE ACCOUNT"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/logout_account"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2sp"
                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="LOGOUT ACCOUNT"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="50sp"
                            android:backgroundTint="@color/yellow"
                            app:cardCornerRadius="2sp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/invite_friend"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_marginBottom="2sp"
                                android:backgroundTint="@color/theme"
                                app:cardCornerRadius="2sp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="INVITE FRIEND"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold">

                                </TextView>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


        </ScrollView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:id="@+id/loading"

        app:cardCornerRadius="10sp"
        android:layout_height="150sp"
        app:cardElevation="5sp"
        android:outlineAmbientShadowColor="@color/redmain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/uploading"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintVertical_bias="0.265"
            app:lottie_speed="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.airbnb.lottie.LottieAnimationView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>