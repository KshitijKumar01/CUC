<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="-0dp">

            <androidx.cardview.widget.CardView
                app:cardElevation="3sp"
                android:id="@+id/item_card_parent"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#929BB1"
                app:cardCornerRadius="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="1sp"
                    app:cardCornerRadius="10sp"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/item_profile_picture_card_parent"
                            android:layout_width="80dp"
                            android:layout_height="80dp"


                            android:layout_alignParentTop="false"
                            android:layout_centerHorizontal="false"
                            android:layout_marginLeft="20sp"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="40dp"

                            app:cardElevation="10dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardCornerRadius="40dp"
                                android:layout_margin="1sp"
                                android:layout_height="match_parent">
                                <RelativeLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/item_profile_picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@mipmap/profilepicture" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/item_text_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="false"
                            android:layout_marginStart="120dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Shubham Mahalkar"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/item_text_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_text_1"
                            android:layout_centerHorizontal="false"
                            android:layout_marginStart="120dp"
                            android:layout_marginEnd="15dp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="Android Developer"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_below="@+id/item_text_2"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="30sp"

                            android:layout_marginEnd="10sp"
                            android:background="#000000"
                            android:backgroundTint="#000000">

                        </View>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@+id/view2"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <RelativeLayout
                                        android:id="@+id/item_1_click_parent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/item_1_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/item_1_value"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="Following"
                                            android:textColor="@color/theme"
                                            android:textSize="13sp" />

                                        <TextView
                                            android:id="@+id/item_1_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="120"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <View
                                        android:id="@+id/item_divider_2"
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="#000000" />

                                    <RelativeLayout
                                        android:id="@+id/item_2_click_parent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/item_2_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/item_2_value"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="Followers"
                                            android:textColor="@color/theme"
                                            android:textSize="13sp" />

                                        <TextView
                                            android:id="@+id/item_2_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="300"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <View
                                        android:id="@+id/item_divider_1"
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginBottom="5dp"
                                        android:background="#000000" />

                                    <RelativeLayout
                                        android:id="@+id/item_3_click_parent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/item_3_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/item_3_value"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="Likes"
                                            android:textColor="@color/theme"
                                            android:textSize="13sp" />

                                        <TextView
                                            android:id="@+id/item_3_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:ellipsize="end"
                                            android:lines="1"
                                            android:maxLength="20"
                                            android:text="1400"
                                            android:textColor="@color/black"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>



    </RelativeLayout>

</FrameLayout>