<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="10sp"
    android:layout_marginBottom="5sp"
    android:visibility="visible"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp">

            <androidx.cardview.widget.CardView
                android:layout_width="50sp"
                app:cardCornerRadius="40sp"
                android:layout_height="50sp">
                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@mipmap/logo" >

                </ImageView>
            </androidx.cardview.widget.CardView>



            <View
                android:layout_width="10sp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Bsilico Eat"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:text="uid"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/gray" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam efficitur ipsum in placerat molestie.  Fusce quis mauris a enim sollicitudin"
            android:textColor="@color/gray" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
         >

            <LinearLayout


                android:layout_width="0sp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.60">
                <TextView
                    android:text="in"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/redmain"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    >

                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@color/yellow"
                    >

                </View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chandigarh asia in up dnhwksdh  dkhdkdn kjds kdbjskdjb kjbddskjbds kjbsdkjbd "
                    android:textSize="15sp"
                    android:paddingLeft="10sp"
                    android:textColor="@color/white"
                    android:background="@color/theme"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout


                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.35">
                <TextView
                    android:text="for"
                    android:textSize="15sp"
                    android:layout_marginRight="10sp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/redmain"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="20sp"
                    >

                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:background="@color/yellow"
                    >

                </View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="23sp"
                    android:text="Mohali"
                    android:textSize="15sp"
                    android:paddingRight="10sp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:background="@color/redmain"
                    >

                </TextView>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="10sp"
            >

            <LinearLayout


                android:layout_width="0sp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.45">
                <androidx.cardview.widget.CardView
                    android:layout_margin="3sp"
                    android:layout_width="match_parent"
                    android:background="@color/teal_700"
                    app:cardCornerRadius="5sp"
                    android:layout_marginLeft="2sp"
                    android:backgroundTint="@color/whatsappgreen"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="2sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/whatsapp"
                            android:layout_margin="2sp"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="WhatsApp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout


                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_percent="0.45">
                <androidx.cardview.widget.CardView
                    android:layout_margin="3sp"
                    android:layout_marginRight="2sp"
                    android:layout_width="match_parent"
                    android:background="@color/teal_700"
                    app:cardCornerRadius="5sp"
                    android:backgroundTint="@color/whatsappgreen"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="2sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@mipmap/call"
                            android:layout_margin="2sp"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            >

                        </ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Call"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />



    </LinearLayout>
</androidx.cardview.widget.CardView>