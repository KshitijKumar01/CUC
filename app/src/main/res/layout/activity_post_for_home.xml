<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0sp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/redmain"
        android:backgroundTint="@color/redmain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:gravity="center"
            android:text="Add new Post "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp"
        android:layout_marginTop="60sp"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10sp">

                <androidx.cardview.widget.CardView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:background="@color/black"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="10sp">

                    <ImageView
                        android:layout_width="60sp"
                        android:layout_height="60sp"

                        android:src="@mipmap/nonbglogo" />

                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="20sp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Shubham Mahalkar"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Public"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/theme" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="center"
                    android:minWidth="0dp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="POST" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/yellow"
                android:foregroundGravity="center"
                app:cardCornerRadius="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintWidth_percent="01">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1sp"
                    app:cardCornerRadius="5sp">

                    <TextView
                        android:id="@+id/category_post"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="Choose Category"
                        android:padding="0dp"
                        android:paddingLeft="10sp"

                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"


                        tools:ignore="RtlCompat">

                    </TextView>
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5sp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/theme"
                    android:foregroundGravity="center"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    app:cardCornerRadius="5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintWidth_percent="01">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="1sp"
                        app:cardCornerRadius="5sp">

                        <EditText
                            android:id="@+id/et_post"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="8sp"
                            android:layout_marginRight="10sp"
                            android:layout_marginBottom="8sp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:hint="Type Something"
                            android:padding="0dp"
                            android:paddingLeft="10sp"
                            android:singleLine="false"

                            android:textAlignment="viewStart"
                            android:textColor="@color/bacgroundforSetting"
                            android:textColorHint="@color/redmain"
                            android:textSize="18sp"
                            android:textStyle="bold"


                            tools:ignore="RtlCompat">

                        </EditText>
                    </androidx.cardview.widget.CardView>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/yellow"
                android:foregroundGravity="center"
                app:cardCornerRadius="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintWidth_percent="01">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1sp"
                    app:cardCornerRadius="5sp">

                    <ImageView
                        android:id="@+id/imagepickerimage"
                        android:layout_width="match_parent"

                        android:layout_height="300sp"
                        android:layout_gravity="center"
                        android:src="@mipmap/addimagebg">

                    </ImageView>
                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        app:layout_constraintVertical_bias="1"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginBottom="0sp"
            android:background="@color/silver"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_photo"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_margin="10sp"
                android:background="@mipmap/camera" />

            <ImageButton
                android:id="@+id/bt_link"

                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_margin="10sp"
                android:background="@mipmap/link" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/bt_setting"
                android:layout_width="19sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:background="@mipmap/more" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>